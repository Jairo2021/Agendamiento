@page
@model AgendaSIG5.App.Frontend.Pages.Personas.Index1Model
@{
}
<h1>Listado de personas</h1>
<a class="btn btn-primary" asp-page="./Crear1">Registrar Persona</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Telefonos</th>
            <th scope="col">E-Correo</th>
            <th colspan="2" scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persona in Model.personas)
        {
            <tr>
                <td>@persona.Id</td>
                <td>@persona.Nombre</td>
                <td>@persona.Apellidos</td>
                <td>@persona.Telefonos</td>
                <td>@persona.ECorreo</td>
                <td><a class="btn btn-secondary" asp-page="./Detalles1" asp-route-id="@persona.Id">Detalle</a></td>
                <td><a class="btn btn-secondary" asp-page="./Editar1" asp-route-id="@persona.Id">Editar</a></td>
            </tr>
        }
    </tbody>
</table>
@model AgendaSIG5.App.Frontend.Pages.Sedes.Crear1Model
@using AgendaSIG5.App.Dominio
@{
}
<h1>Registro Sede</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="sede.FK_Id_Ciudad">Ciudad</label>
        <select asp-for="sede.FK_Id_Ciudad" class="form-control">
        @foreach (var ciudad in Model.ciudades)
        {
			<option value="@ciudad.Id">@ciudad.NombreCiudad</option>
        }
		</select>		
    </div>
    <div class="form-group">
        <label asp-for="sede.Nombre">Nombre Sede</label>
        <input asp-for="sede.Nombre" class="form-control">
        <span asp-validation-for="sede.Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear Sede</button>
</form>
<a class="btn btn-secondary" asp-page="./Index1">Volver</a>